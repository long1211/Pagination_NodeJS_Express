<%- include('../layout/header'); -%>
<div class="container" style="margin-top: 50px">
  <div class="row">

    <!-- ITEMS -->
    <% for(var i = 0; i < products.length; i++) { %>
    <div class="col-md-3">
      <div class="p-1">
        <div class="card">
          <img src="<%= products[i].cover %>" class="card-img-top">
          <div class="card-body">
            <h4 class="card-title"><%= products[i].name %></h4>
            <p class="card-text"><%= products[i].category %></p>
            <p class="card-text"><%= products[i].price %>$</p>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </div>

  <div class="row">
    <!-- pagination -->
    <% if(pages > 0) { %>
    <!-- show pagination if there is pages -->
    <nav class="mx-auto">
      <ul class="pagination" style="margin-top: 2rem;">
        <!-- FIRST ITEM -->
        <% if(current == 1) { %>
        <li class="page-item disabled">
          <a class="page-link" href="/">First</a>
        </li>
        <% } else { %>
        <li class="page-item">
          <a class="page-link" href="/">First</a>
        </li>
        <% } %>
        <!-- ITEMS  -->
        <% var i = (Number(current) > 3 ? Number(current) - 2 : 1) %>
        <% if(i !== 1) { %>
        <li class="page-item disabled">
          <a class="page-link" href="#">...</a>
        </li>
        <% } %>
        <% for(; i <= (Number(current) + 2) && i <= pages; i++) { %>
        <% if(i == current) { %>
        <li class="page-item active">
          <a class="page-link" href="/news/<%= i %>/">
            <%= i %>
          </a>
        </li>
        <% } else { %>
        <li class="page-item">
          <a class="page-link" href="/news/<%= i %>/">
            <%= i %>
          </a>
        </li>
        <% } %>
        <% if (i == Number(current) + 2 && i < pages) { %>
        <li class="page-item disabled">
          <a class="page-link" href="#">...</a>
        </li>
        <% } %>
        <% } %>
        <!-- LAST ITEM -->
        <% if(current == pages) { %>
        <li class="page-item disabled">
          <a class="page-link" href="#">
            Last
          </a>
        </li>
        <% } else { %>
        <li class="page-item">
          <a class="page-link" href="/news/<%= pages %>/">
            Last
          </a>
        </li>
        <% } %>
      </ul>
    </nav>
    <% } %>
  </div>
</div>
<%- include('../layout/footer'); -%>